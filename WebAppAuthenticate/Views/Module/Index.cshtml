@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/H_LayOut.cshtml";
}

@section TitleSection{
    Dictionary
    }
@section HeaderSection{
    @*jsTree CSS*@
    <script src="~/Scripts/jstree.js"></script>
    <link href="~/Content/style.min.css" rel="stylesheet" />
    @*DataTable*@
    <script type="text/javascript">
        $(function() {
            ModulejsTree();
            //$("#moduleId").val("");
        });

        //jstree
        function ModulejsTree() {
            $(".moduleTree") .jstree({
                    "core": {
                        "multiple": false,
                        "animation": 0,
                        "themes": "",
                        "data": {
                            "url": "/Module/TreeList",
                            "datatype": "json",
                            "data": function(node, callback) {
                                return { "id": "#" };
                            }
                        }
                    },
                    "types": {
                        "default": { "icon": "glyphicon glyphicon-asterisk" }
                    },
                    "state": { "key": "state_demo" },
                    "themes": {
                        "themes": "default",
                        "dots": true,
                        "icon": false
                    },
                    "plugins": ["state", "types", "themes"]
                })
                .bind("select_node.jstree",
                    function(e, data) {
                        var inst = data.instance;
                        var selectedNode = inst.get_node(data.selected);
                        AddCreate(selectedNode.id);
                        $("#moduleId").val(selectedNode.id);
                    });
        }

        //新增模块
        function AddCreate(moduleId) {
            $("#moduleId").val("");
            var loadUrl = "/Module/ModuleDetail?id=" + moduleId;
            $("#panel_Edit").load(loadUrl);
        }

        //删除模块
        function Delete() {
            var ref = $("#moduleTree").jstree(true);
            var sel = ref.get_selected();
            if (!sel.length) {
                alert("请选择一个子节点！");
                return false;
            }
            var deleteCheck = confirm("确认删除这条数据？");
            if (deleteCheck) {
                $.ajax({
                    url: "/Module/Delete?id=" + sel,
                    datatype: "json",
                    type: "post",
                    success: function(data) {
                        if (data != null) {
                            $("#moduleTree").jstree(true).refresh();
                            ModulejsTree();
                        } else {
                            alert("删除失败！");
                        }
                    }
                });
            }
            return false;
        }
    </script>
}

<div class="row">
    @* 模块树*@
    <div class="col-md-2">
        <div class="row" style="margin: 2px;">
            <button id="creatMainbtn" onclick="AddCreate(0);" role="button" class="btn btn-success btn-sm" data-toggle="modal"><i class="glyphicon glyphicon-plus"></i> </button>
            <button id="deletMainbtn" onclick="Delete();" role="button" class="btn btn-danger btn-sm" data-toggle="modal"><i class="glyphicon glyphicon-remove"></i></button>
        </div>
        <div id="jsTree" class="moduleTree" style="margin-top: 1em; min-height: 200px;"></div>
    </div>

    <input type="hidden" id="moduleId" value="0"/>
    @*右边编辑*@
    <div class="col-md-10" id="rightPart">
        <div class="tabbable" id="tabs">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#panel_Edit" data-toggle="tab">用户基本信息管理</a>
                </li>
                <li>
                    <a href="#panel_RoleJsTree" data-toggle="tab">用户角色分配</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="panel_Edit"></div>
                <div class="tab-pane" id="panel_RoleJsTree"></div>
            </div>
        </div>
    </div>
</div>
