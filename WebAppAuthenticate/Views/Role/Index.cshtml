@model WebAppAuthenticate.ViewModels.RoleFormViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/H_LayOut.cshtml";
}

@section TitleSection{
    RoleList
}

@section HeaderSection
{
    <link href="~/Content/jquery.dataTables.css" rel="stylesheet"/>
    <link href="~/Content/dataTables.bootstrap.css" rel="stylesheet"/>
    <script src="~/Scripts/jquery.dataTables.js"></script>
    <link href="~/Content/style.min.css" rel="stylesheet" />
    
    <script src="~/Scripts/jstree.min.js"></script>
    

    <script type="text/javascript">
        $(document).ready(function () {
            var roleName = $("#RoleName").val();
            DataTable(roleName);
        });

        //保存角色信息
        function SaveRoles() {
            $("#roleForm").submit(function (e) {
                e.preventDefault();
                if (NameValid().form()) {
                    var data = $("#roleForm").serialize();
                    $.ajax({
                        url: "/Role/Save",
                        type: "post",
                        datatype: "json",
                        async: false,
                        data: data,
                        success: function (result) {
                            if (result !== "access") {
                                alert(result);
                            } else {
                                $("#closeBaseBtn").click();
                                DataTable(null);
                            }
                        }
                    });
                }
                else {
                    return;
                }
            });
        }

        //验证重名
        function NameValid() {
            return $("#roleForm").validate({
                rules: {
                    RoleName: {
                        remote: {
                            cache: false,
                            async: false,
                            url: "/RoleManage/CheckRoleName",
                            type: "post",
                            datatype: "json",
                            data: {
                                roleName: function () {
                                    return $("#RoleName").val();
                                },
                                id: function () {
                                    return $("#Id").val();
                                }
                            }
                        }
                    }
                },
                messages: {
                    RoleName: {
                        remote: "这个名字已经有人用过了"
                    }
                }
            });
        }

        //DataTable
        function DataTable(roleName) {
            $("#dataTable").DataTable({
                "bPaginate": true, 
                "bSort": true,
                "bAutoWidth": true,
                "searching": false, 
                "columns": [
                    { "data": "RoleName" },
                    { "data": "Code" },
                    { "data": "LastChangeUser" },
                    { "data": "LastChangeTime" },
                    { "data": "Description" }
                ],
                "columnDefs": [
                    {
                        "targets": [5],
                        "data": "Id",
                        "render": function(data, type, full) {
                            return '<a class="edit" data-toggle="modal" onclick="EditRole(' + data + ')"><i class="glyphicon glyphicon-pencil"></i></a> | <a class="delete" href="javascript:void(0);" onclick="DeleteFunc(' + data + ')"><i class="glyphicon glyphicon-remove"></i></a>';
                        }
                    },
                    {
                        "targets": [1, 2, 3,4],
                        "bSortable": false
                    }
                ],
                "destroy": true,
                "bProcessing": false, 
                "bServerSide": true, 
                "sAjaxSource": "/Role/DataList", 
                "sDom": "Tflt<'row DTTTFooter'<'col-sm-6'i><'col-sm-6'p>>",
                "fnServerData": function(sSource, aoData, fnCallback) {
                    var data = {};
                    for (var i = 0; i < aoData.length; i++) {
                        if (aoData[i].name === "iDisplayStart") {
                            data.PageStart = aoData[i].value;
                        }
                        if (aoData[i].name === "iDisplayLength") {
                            data.PageSize = aoData[i].value;
                        }
                        if (aoData[i].name === "sEcho") {
                            data.Draw = aoData[i].value;
                        }
                        if (aoData[i].name === "iSortCol_0") {
                            data.SortCol = aoData[i].value;
                        }
                        if (aoData[i].name === "sSortDir_0") {
                            data.SortDir = aoData[i].value;
                        }
                    }
                    data.RoleName = roleName,
                        $.ajax({
                            'type': 'post',
                            "url": sSource,
                            "dataType": "json",
                            "data": {
                                "searchBase": data
                            },
                            "success": function(resp) {
                                fnCallback(resp);
                            }
                        });
                },
                oLanguage: { 
                    "sProcessing": "正在加载中......",
                    "sLengthMenu": "每页显示 _MENU_ 条记录",
                    "sZeroRecords": "未查到数据！",
                    "sEmptyTable": "表中无数据存在！",
                    "sInfo": "当前显示 _START_ 到 _END_ 条，共 _TOTAL_ 条记录",
                    "sInfoFiltered": "数据表中共为 _MAX_ 条记录",
                    "oPaginate": {
                        "sFirst": "首页",
                        "sPrevious": "上一页",
                        "sNext": "下一页",
                        "sLast": "末页"
                    }
                }
            });
        }

        //查找按钮
        function SearchRoles() {
            var roleName = $("#RoleName").val();
            DataTable(roleName);
        }

        //新增修改
        function EditRole(id) {
            var loadUrl = "/Role/RoleDetail?id=" + id;
            $("#roleModel").load(loadUrl,
                function() {
                    $("#roleModel").modal("show");
                });
        }

        //删除
        function DeleteFunc(id) {
            var deleteCheck = confirm("确认删除这条数据？");
            if (deleteCheck) {
                $.ajax({
                    url: "Delete?id=" + id,
                    datatype: "json",
                    type: "Post",
                    success: function(data) {
                        if (data !== null) {
                            DataTable();
                        } else {
                            alert("删除失败");
                        }
                    }
                });
            }
        }
    </script>
} 

@*DataTable*@
<div class="col-md-12">
    <div class="row">
        <div class="col-md-2">
            <input type="text" class="form-control" id="RoleName" maxlength="50" placeholder="角色名"/>
        </div>
        <div class="col-md-4">
            <input type="button" value="查询" class="btn btn-primary" onclick="SearchRoles()" />
            <input type="button" value="新增" class="btn btn-primary" onclick ="EditRole(0)" data-toggle="modal"/>
        </div>
    </div>
    <div class="row" style ="margin: 15px;">
        <table id="dataTable" class="table">
            <thead >
            <tr>
                <th>角色名</th>
                <th>编码</th>
                <th>上次修改人</th>
                <th>上次修改时间</th>
                <th>描述</th>
                <th>操作</th>
            </tr>
            <thead>
        </table>
    </div>
</div>

@*弹出框*@
<div class="modal fade" id="roleModel" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>